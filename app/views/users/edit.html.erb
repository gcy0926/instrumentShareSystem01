    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :姓名 %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :性别 %><br>
    <%= f.text_field :sex %>
  </div>
  <div class="field">
    <%= f.label :身份证号 %><br>
    <%= f.text_field :uid %>
  </div>
  <div class="field">
    <%= f.label :联系电话 %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :电子邮箱 %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :用户类型 %><br>
    <%= f.text_field :utype %>
  </div>
